#include <stdio.h>
#include <time.h>
#include <stdlib.h>

int spr(char you , char comp){
    if(you==comp){
        return 0;
    }
    else if(you=='s' && comp=='p'){
        return -1;
    }
    else if(you=='p' && comp=='r'){
        return -1;
    }
    else if(you=='r' && comp=='s'){
        return -1;
    }
    else if(you=='p' && comp=='s'){
        return 1;
    }
    else if(you=='r' && comp=='p'){
        return 1;
    }
    else if(you=='s' && comp=='p'){
        return 1;
    }
}

int main(){
    int number;
    char you, comp;
    srand(time(0));
    number = rand()%100 +1;
    if(number<33){
        comp = 's';
    }
    else if (number>66)
    {
        comp = 'p';
    }
    else{
        comp = 'r';
    }
    printf("enter 's' for stone,'p' for paper, 'g' for scissors");
    scanf("%c",&you);
    int result = spr(you,comp);
    printf("you choose %c and computer choose %c",you,comp);
    if (result==0)
    {
        printf("match darw");
    }
    else if(result==1){
        printf("you win");
    }
    else
    {
        printf("you loss");
    }
    return 0;
}
